<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ManageCardsController">
   <children>
      <TableView fx:id="cardTable" layoutX="15.0" layoutY="53.0" onMouseClicked="#getSelectedCard" prefHeight="324.0" prefWidth="570.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="50.0">
        <columns>
            <TableColumn fx:id="frontCol" editable="false" maxWidth="1.7976931348623157E308" minWidth="200.0" prefWidth="-1.0" text="Mặt trước" />
            <TableColumn fx:id="backCol" editable="false" maxWidth="1.7976931348623157E308" minWidth="200.0" prefWidth="-1.0" text="Mặt sau" />
        </columns>
      </TableView>
      <GridPane layoutX="-1.0" prefHeight="39.0" prefWidth="600.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Button fx:id="MenuButton" mnemonicParsing="false" onAction="#backToMenu" text="Trở về Menu">
               <GridPane.margin>
                  <Insets left="20.0" />
               </GridPane.margin>
            </Button>
            <HBox alignment="CENTER_RIGHT" spacing="15.0" GridPane.columnIndex="1">
               <children>
                  <Button fx:id="newCardButton" mnemonicParsing="false" onAction="#goToCreateNewCard" prefHeight="26.0" prefWidth="85.0" text="Thêm thẻ" />
                  <Button fx:id="detailButton" mnemonicParsing="false" onAction="#goToDetails" prefHeight="26.0" prefWidth="107.0" text="Xem riêng thẻ" />
                  <Button fx:id="editCardButton" mnemonicParsing="false" onAction="#goToEdit" text="Sửa thẻ" />
                  <Button fx:id="deleteCardButton" mnemonicParsing="false" onAction="#goToDelete" text="Xoá thẻ..." />
               </children>
               <padding>
                  <Insets right="20.0" />
               </padding>
            </HBox>
         </children>
      </GridPane>
   </children>
</AnchorPane>
